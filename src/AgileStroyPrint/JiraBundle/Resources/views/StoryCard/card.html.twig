    <style>
    @media screen {
        .printable {
            display: none;
        }
    }
    @media print {
        @page {
            /* dimensions for the whole page */
            /* size: 13.82cm 9.5cm landscape; */
            size: A4 landscape;
            margin: 0;
        }

        /* YUI 3.5.0 reset.css (http://developer.yahoo.com/yui/3/cssreset/) - http://cssreset.com */
        html{color:#000;background:#FFF}body,div,dl,dt,dd,ul,ol,li,h1,h2,h3,h4,h5,h6,pre,code,form,fieldset,legend,input,textarea,p,blockquote,th,td{margin:0;padding:0}table{border-collapse:collapse;border-spacing:0}fieldset,img{border:0}address,caption,cite,code,dfn,em,strong,th,var{font-style:normal;font-weight:normal}ol,ul{list-style:none}caption,th{text-align:left}h1,h2,h3,h4,h5,h6{font-size:100%;font-weight:normal}q:before,q:after{content:''}abbr,acronym{border:0;font-variant:normal}sup{vertical-align:text-top}sub{vertical-align:text-bottom}input,textarea,select{font-family:inherit;font-size:inherit;font-weight:inherit}input,textarea,select{*font-size:100%}legend{color:#000}#yui3-css-stamp.cssreset{display:none}

        /* hide elements */
        nav,
        header,
        footer {
            display: none;
        }

        /* Common */
        * {
            -webkit-box-sizing: content-box !important;
            -moz-box-sizing: content-box !important;
            box-sizing: content-box !important;
        }

        body {
            font-family: arial, verdana !important;
            color: #000 !important;
            margin: 0 !important;
            line-height: normal !important;
            font-size: 16px !important;
        }

        section {
            page-break-after: always !important;

            width: 276mm !important;
            height: 189mm !important;

            padding-left: 10mm !important;
            padding-top: 10mm !important;
            padding-right: 10mm !important;
            padding-bottom: 10mm !important;
            background: #FFF !important;
        }

        div {
            margin: 0 !important;
        }

        .legend {
            color: #6c6c6c !important;
            font-size: 22pt !important;
            margin-bottom: 5pt !important;
        }

        .value {
            font-size: 30pt !important;
        }

        hr {
            border: 2px dashed #959595 !important;
            margin-bottom: 5mm !important;
            margin-top: 5mm !important;
        }

        /* Summary */
        .summary {
            font-size: 50pt !important;
            width: 22.5cm !important;
            height: 15cm !important;
            margin: 0 !important;
        }

        /* Points */
        .points {
            width: 4.5cm !important;
            height: 4.5cm !important;
            border: 2px solid #959595 !important;
            float: right !important;
        }
        
        .points div {
            padding: 0 !important;
            margin: 0 !important;
            text-align: center !important;
        }

        .points .legend {
            margin-top: 8pt !important;
        }

        .points .value {
            font-size: 80pt !important;
        }

        /* key, type, project */
        .key,
        .type {
            margin-right: 5mm !important;
        }

        .key,
        .type,
        .project {
            float: left !important;
            height: 2.6cm !important;
        }

        .key {
            width: 7cm !important;
        }

        .type {
            width: 7.8cm !important;
        }

        .project {
            width: 11.8cm !important;
        }
    }
    </style>
    {% for story in stories %}
    <section id="{{ story.getKey() }}" class="printable">
        <div class="points">
            <div class="legend">{{ 'card.effort'|trans }}</div>
            <div class="value">{{ story.getEffort() }}</div>
        </div>

        <div class="summary">{{ story.getSummary() }}</div>

        <hr />

        <div class="key">
            <div class="legend">{{ 'card.key'|trans }}</div>
            <div class="value">{{ story.getKey() }}</div>
        </div>

        <div class="type">
            <div class="legend">{{ 'card.type'|trans }}</div>
            <div class="value">{{ story.getType() }}</div>
        </div>

        <div class="project">
            <div class="legend">{{ 'card.project'|trans }}<div>
            <div class="value">{{ story.getProject() }}</div>
        </div>
    </section>
    {% endfor %}